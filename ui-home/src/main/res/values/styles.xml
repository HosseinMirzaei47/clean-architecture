<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Tasks -->
    <!-- Text Appearances -->
    <!-- For titles, e.g. toolbar -->

    <style name="TextAppearance.Core.Task.Title" parent="@style/TextAppearance.Core.H2">
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
        <item name="maxLines">1</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextAppearance.Core.Task.Description" parent="@style/TextAppearance.Core.H3">
        <item name="android:alpha">.5</item>
        <item name="alpha">.5</item>
        <item name="maxLines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextAppearance.Core.Category.Title" parent="@style/TextAppearance.Core.H2">
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
        <item name="maxLines">1</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextAppearance.Core.Category.Description" parent="@style/TextAppearance.Core.H3">
        <item name="android:alpha">.5</item>
        <item name="alpha">.5</item>
        <item name="maxLines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextAppearance.Core.AllTasks.Item.Title" parent="@style/TextAppearance.AppCompat">
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/text_size_b1</item>
        <item name="maxLines">1</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextAppearance.Core.AllTasks.Item.DueDate" parent="@style/TextAppearance.Core.H3">
        <item name="fontFamily">@font/core_font_light</item>
        <item name="android:fontFamily">@font/core_font_light</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/text_size_micro</item>

    </style>

    <style name="TextAppearance.Core.AllTasks.NoTaskAlert.Header" parent="@style/TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="maxLines">1</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextAppearance.Core.AllTasks.NoTaskAlert.Header.Sub" parent="TextAppearance.Core.AllTasks.NoTaskAlert.Header">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:textColor">@color/pink_swan</item>
    </style>

    <style name="TextAppearance.Core.AllTasks.Item.Description" parent="@style/TextAppearance.AppCompat">
        <item name="android:alpha">.5</item>
        <item name="alpha">.5</item>
        <item name="maxLines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/task_item_desc</item>
    </style>

    <style name="TextAppearance.Core.Task.NewTask.Title" parent="@style/TextAppearance.Core.H2">
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/title_create_task</item>
        <item name="maxLines">1</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextAppearance.Core.Task.NewTask.Subtitle" parent="@style/TextAppearance.Core.H3">
        <item name="android:singleLine">true</item>
        <item name="singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:textColor">@color/common_inverse</item>
    </style>

    <style name="Widget.Core.Button">
        <item name="backgroundTint">@color/core_secondary</item>
        <item name="android:textColor">@color/text_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/_5sdp</item>
    </style>

    <style name="Button.TextIconButton.BottomSheet.Options" parent="@style/Widget.Core.MaterialComponents.Button.TextButton.Icon">
        <item name="android:gravity">start</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconGravity">start</item>
        <item name="iconPadding">@dimen/_16sdp</item>
        <item name="rippleColor">@color/ocean_green</item>
        <item name="android:textColor">@color/global_text_color</item>
        <item name="iconTint">@color/ocean_green</item>
    </style>

    <style name="Widget.Core.VerticalLine">
        <item name="android:background">@drawable/bg_vertical_line</item>
    </style>

    <style name="Widget.Core.TextInput" parent="@style/TextAppearance.Core.H3">
        <item name="android:background">@drawable/bg_input_text</item>
        <item name="android:inputType">text</item>
        <item name="android:ellipsize">end</item>
        <item name="maxLines">1</item>
        <item name="android:textColor">@color/common_inverse</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Widget.Core.TextInputLayout.Dense">
        <item name="materialThemeOverlay">
            @style/ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox.Dense
        </item>
    </style>

    <style name="ThemeOverlay.AppTheme.TextInputEditText.Outlined" parent="">
        <!-- changes cursor color in textInputEditText -->
        <item name="colorControlActivated">@color/chambray</item>
    </style>

    <style name="Widget.Core.TextInputLayout.WithoutBackground">
        <item name="android:background">@null</item>
    </style>

    <style name="Widget.Core.TextInputEditText" parent="Widget.Core.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textColor">@color/common_inverse</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textAppearance">?textAppearanceBody1</item>
        <item name="android:textColorHighlight">@color/core_secondary</item>
    </style>

    <!-- Filters -->
    <!-- Easier to extend Chip.Choice because it includes some desired color effects. -->
    <style name="Widget.Core.FilterChip" parent="Widget.Core.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_toggle_background</item>
        <item name="android:textColor">@color/radio_button_text_color</item>
        <item name="chipIconVisible">false</item>
        <item name="chipStrokeColor">@color/chip_stroke</item>
        <item name="textStartPadding">0dp</item>
        <item name="rippleColor">@color/core_blue</item>
    </style>

    <style name="Widget.Core.FilterChip.Selectable">
        <item name="android:checkable">true</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="o">@dimen/_5sdp</item>
    </style>

    <!-- Active filters show a close shortcut and no checkmark. -->
    <style name="Widget.Core.FilterChip.Closeable">
        <item name="android:checkable">false</item>
        <item name="chipIcon">@drawable/chip_dot</item>
        <item name="closeIcon">@drawable/ic_filter_clear</item>
        <item name="android:closeIcon">@drawable/ic_filter_clear</item>
        <item name="closeIconTint">@color/brick_red</item>
        <item name="closeIconVisible">true</item>
        <item name="textEndPadding">2dp</item>
    </style>

    <style name="Widget.Core.FilterChip.Applied" parent="Widget.Core.FilterChip.Closeable">
        <item name="android:checkable">false</item>
        <item name="chipIcon">@drawable/chip_dot</item>
        <item name="closeIcon">@drawable/ic_filter_clear</item>
        <item name="android:closeIcon">@drawable/ic_filter_clear</item>
        <item name="closeIconTint">@color/brick_red</item>
        <item name="closeIconVisible">true</item>
        <item name="textEndPadding">2dp</item>
    </style>

    <style name="ShapeAppearanceRoundRight">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomRight">@dimen/radius_medium</item>
        <item name="cornerSizeTopRight">@dimen/radius_medium</item>
    </style>

    <style name="ShapeAppearanceRoundLeft">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">@dimen/radius_medium</item>
        <item name="cornerSizeTopLeft">@dimen/radius_medium</item>
    </style>

    <style name="ShapeAppearanceRound">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">64dp</item>
    </style>

    <style name="Widget.Core.Filter.TextInputEditText" parent="Widget.Core.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:minHeight">58dp</item>
        <item name="android:textColor">@color/core_primary</item>
        <item name="android:textAppearance">?textAppearanceBody1</item>
    </style>

    <style name="Widget.Core.Filter.TextInputEditText.PositiveDigitsWithSeparator">
        <item name="android:digits">0123456789,</item>
        <item name="android:inputType">number</item>
        <item name="android:textDirection">ltr</item>
    </style>

    <style name="Widget.Core.Filter.TextInputLayout" parent="Widget.Core.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="android:background">@drawable/text_input_layout_background</item>
        <item name="boxStrokeColor">@color/darker_gray</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/radius_medium</item>
        <item name="boxCornerRadiusBottomStart">@dimen/radius_medium</item>
        <item name="boxCornerRadiusTopEnd">@dimen/radius_medium</item>
        <item name="boxCornerRadiusTopStart">@dimen/radius_medium</item>
        <item name="errorEnabled">true</item>
        <item name="errorIconDrawable">@null</item>
        <item name="helperTextTextColor">?colorSecondary</item>
        <item name="helperTextTextAppearance">@style/TextAppearance.Core.Filter.Helper</item>
        <item name="errorTextAppearance">@style/TextAppearance.Core.Filter.Error</item>
    </style>

    <style name="TextAppearance.Core.Filter.Helper" parent="TextAppearance.Design.HelperText">
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="TextAppearance.Core.Filter.Error" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>

    <style name="Widget.Core.Filter.TextInputLayout.WithoutBackground">
        <item name="android:background">@null</item>
    </style>

    <style name="Widget.Core.Filter.TextInputEditText.UnWritable">
        <item name="android:cursorVisible">false</item>
        <item name="android:enabled">true</item>
        <item name="android:textColor">@color/core_secondary</item>
        <item name="android:focusable">false</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="Widget.Core.Filter.Chip.WithToggle" parent="Widget.Core.MaterialComponents.Chip.Action">
        <item name="android:checkable">true</item>
        <item name="android:textAppearance">?textAppearanceBody2</item>
        <item name="checkedIcon">@drawable/selector_checkbox</item>
        <item name="chipIcon">@drawable/selector_checkbox</item>
        <item name="chipBackgroundColor">@color/white</item>
        <item name="chipCornerRadius">@dimen/radius_medium</item>
        <item name="chipStrokeColor">@color/text_input_layout_color</item>
        <item name="chipStrokeWidth">1dp</item>
    </style>

    <style name="Core.MaterialComponents.TextButton.AddTask" parent="@style/Core.MaterialComponents.TextButton">
        <item name="materialThemeOverlay">@style/Widget.MaterialComponents.Button.OutlinedButton
        </item>
        <item name="strokeColor">@color/chambray</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">@dimen/radius_medium</item>
        <item name="android:clickable">true</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/chambray</item>
        <item name="rippleColor">@color/darker_gray</item>
    </style>

    <style name="TextAppearance.Core.AddTask.CommonOptions" parent="TextAppearance.Core.AllTasks.Item.DueDate">
        <item name="android:textSize">@dimen/_8ssp</item>
        <item name="android:textColor">@color/chambray</item>
    </style>

</resources>