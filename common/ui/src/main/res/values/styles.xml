        <!-- Date picker and time picker specific styles -->
        <item name="android:datePickerStyle">@style/DatePickerStyle</item>
        <item name="android:timePickerStyle">@style/TimePickerStyle</item>

        <!-- selected Item color for date picker -->
        <item name="colorControlActivated">@color/core_secondary</item>
        <!-- day , month in date picker -->
        <item name="android:textColorPrimaryInverse">@color/core_text_color_primary_inverse</item>
        <!-- year in date picker -->
        <item name="android:textColorSecondaryInverse">@color/core_text_color_primary_inverse</item>

