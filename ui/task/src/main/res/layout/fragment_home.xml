<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.speaking.partner.task.home.HomeViewModel" />

        <variable
            name="defaultCategories"
            type="com.speaking.partner.model.models.task.DefaultCategories" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/padding_large"
        android:paddingTop="@dimen/padding_normal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_home"
                style="@style/TextAppearance.ToDo.Page.Title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/home" />

            <ImageButton
                onSafeClick="@{vm::onOpenSettingsClicked}"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/settings"
                android:padding="@dimen/padding_small"
                android:src="@drawable/ic_settings" />
        </LinearLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_normal"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_today"
                        style="@style/Widget.Todo.CardView"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_64sdp"
                        android:layout_marginEnd="@dimen/margin_micro"
                        android:layout_weight="1"
                        android:onClick="@{() -> vm.onCategoriesClicked(defaultCategories.TODAY)}">

                        <TextView
                            android:id="@+id/tv_def_category"
                            style="@style/TextAppearance.ToDo.Lists.Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start|top"
                            android:layout_marginStart="@dimen/margin_ten"
                            android:layout_marginTop="@dimen/margin_ten"
                            android:text="@string/today" />

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|center_vertical"
                            android:layout_marginEnd="@dimen/margin_ten"
                            android:background="@null"
                            android:contentDescription="@string/today"
                            android:src="@drawable/ic_rect_day" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start|bottom"
                            android:layout_marginStart="@dimen/margin_ten"
                            android:layout_marginBottom="@dimen/margin_ten"
                            android:alpha="0.5"
                            android:text="@{vm.todayTasksCount == null ? @string/count_tasks(0) : @string/count_tasks(vm.todayTasksCount)}"
                            tools:text="13 items" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_upcoming"
                        style="@style/Widget.Todo.CardView"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_64sdp"
                        android:layout_marginStart="@dimen/margin_micro"
                        android:layout_weight="1"
                        android:onClick="@{() -> vm.onCategoriesClicked(defaultCategories.UPCOMING)}">

                        <TextView
                            style="@style/TextAppearance.ToDo.Lists.Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start|top"
                            android:layout_marginStart="@dimen/margin_ten"
                            android:layout_marginTop="@dimen/margin_ten"
                            android:text="@string/upcoming" />

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|center_vertical"
                            android:layout_marginEnd="@dimen/margin_ten"
                            android:background="@null"
                            android:contentDescription="@string/upcoming"
                            android:src="@drawable/ic_upcoming" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start|bottom"
                            android:layout_marginStart="@dimen/margin_ten"
                            android:layout_marginBottom="@dimen/margin_ten"
                            android:alpha="0.5"
                            android:text="@{vm.upcomingTasksCount == null ? @string/count_tasks(0) : @string/count_tasks(vm.upcomingTasksCount)}"
                            tools:text="10 items" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_inbox"
                    style="@style/Widget.Todo.CardView"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_64sdp"
                    android:layout_marginVertical="@dimen/margin_ten"
                    android:onClick="@{() -> vm.onCategoriesClicked(defaultCategories.INBOX)}">

                    <TextView
                        style="@style/TextAppearance.ToDo.Lists.Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|top"
                        android:layout_marginStart="@dimen/margin_ten"
                        android:layout_marginTop="@dimen/margin_ten"
                        android:text="@string/inbox" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|center_vertical"
                        android:layout_marginEnd="@dimen/margin_ten"
                        android:background="@null"
                        android:contentDescription="@string/inbox"
                        android:src="@drawable/ic_inbox" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|bottom"
                        android:layout_marginStart="@dimen/margin_ten"
                        android:layout_marginBottom="@dimen/margin_ten"
                        android:alpha="0.5"
                        android:text="@{vm.allTasksCount == null ? @string/count_tasks(0) : @string/count_tasks(vm.allTasksCount)}"
                        tools:text="55 items" />
                </androidx.cardview.widget.CardView>

                <View
                    android:id="@+id/divider_categories"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/margin_normal"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:background="@color/divider_view_color" />

                <com.airbnb.epoxy.EpoxyRecyclerView
                    android:id="@+id/categoriesRecyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/margin_ten"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/epoxy_item_home_all_categories" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>