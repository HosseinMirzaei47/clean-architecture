<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="title"
            type="String" />

        <variable
            name="count"
            type="Integer" />

        <variable
            name="openCategoryClickListener"
            type="com.speaking.partner.ui.utils.EpoxyActionListener" />

    </data>

    <LinearLayout
        android:id="@+id/cv_category_item"
        onSafeClick="@{openCategoryClickListener::onAction}"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/margin_three"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/padding_small">

        <TextView
            android:id="@+id/tv_category_name"
            style="@style/TextAppearance.ToDo.AllCategories.Item.Title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="false"
            android:drawablePadding="@dimen/padding_small"
            android:text="@{title}"
            android:textColor="@color/adaptive"
            app:drawableStartCompat="@drawable/ic_circle"
            tools:text="@tools:sample/first_names" />

        <TextView
            android:id="@+id/tv_all_tasks_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_small"
            android:gravity="center"
            android:text="@{count.toString()}"
            tools:text="43" />

        <ImageView
            android:id="@+id/ib_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:contentDescription="@string/todo"
            android:padding="@dimen/padding_small"
            android:src="@drawable/ic_category_go"
            app:tint="@color/adaptive" />

    </LinearLayout>

</layout>