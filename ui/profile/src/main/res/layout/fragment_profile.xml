<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.speaking.partner.profile.ProfileViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_small"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_profile_title"
                style="@style/TextAppearance.ToDo.Page.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_marginTop="@dimen/_25sdp"
                android:text="@string/profile"
                android:textColor="@color/adaptive"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/filter_icon"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginEnd="@dimen/margin_small"
                android:background="@null"
                android:contentDescription="@string/todo"
                android:padding="@dimen/padding_large"
                android:tint="@color/adaptive"
                app:layout_constraintBottom_toBottomOf="@id/tv_profile_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_profile_title" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrlvw_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:paddingTop="@dimen/padding_normal"
            android:paddingBottom="@dimen/margin_normal"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/TextAppearance.ToDo.Profile.Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_small"
                    android:text="@string/profile_title_task_overview" />

                <TextView
                    goneUnless="@{vm.allTasksCount != 0}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_normal"
                    android:gravity="center"
                    android:text="@string/no_data_available" />

                <androidx.cardview.widget.CardView
                    goneUnless="@{vm.allTasksCount==0}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/padding_large"
                    app:cardCornerRadius="@dimen/_15sdp"
                    app:cardElevation="@dimen/elevation_small">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_micro"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/margin_micro"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:contentDescription="@string/todo"
                                android:onClick="@{()->vm.onSetSelectedWeek(false)}"
                                android:rotation="@dimen/rotation_left"
                                android:src="@drawable/ic_baseline_arrow" />

                            <TextView
                                style="@style/TextAppearance.ToDo.Profile.Chart.WeekIndicator"
                                setWeekText="@{vm.selectedWeek}"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/adaptive"
                                tools:text="@string/this_week" />

                            <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:contentDescription="@string/todo"
                                android:onClick="@{()->vm.onSetSelectedWeek(true)}"
                                android:rotation="@dimen/rotation_right"
                                android:src="@drawable/ic_baseline_arrow" />

                        </LinearLayout>

                        <LinearLayout
                            goneUnless="@{vm.allTasksCount==0}"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="@dimen/_80sdp"
                                android:layout_height="@dimen/_60sdp"
                                android:layout_marginVertical="@dimen/margin_micro"
                                android:layout_marginEnd="@dimen/margin_micro"
                                app:cardBackgroundColor="@color/todo_color_surface"
                                app:cardCornerRadius="@dimen/_8sdp"
                                app:cardElevation="0dp"
                                app:strokeColor="@color/todo_blue"
                                app:strokeWidth="@dimen/_1sdp">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_margin="@dimen/margin_micro">

                                    <ImageView
                                        android:id="@+id/iv_all_tasks_status"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:contentDescription="@string/todo"
                                        android:paddingVertical="@dimen/_2sdp"
                                        android:scaleType="fitStart"
                                        android:src="@drawable/ic_all_tasks_status"
                                        app:layout_constraintEnd_toStartOf="@+id/tv_all_tasks_count"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent" />

                                    <TextView
                                        android:id="@+id/tv_all_tasks_count"
                                        style="@style/TextAppearance.ToDo.Status.Item.Count"
                                        android:layout_width="0dp"
                                        android:layout_height="0dp"
                                        android:gravity="center"
                                        android:text="@{vm.allTasksCount.toString()}"
                                        app:layout_constraintBottom_toBottomOf="@+id/iv_all_tasks_status"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintStart_toEndOf="@+id/iv_all_tasks_status"
                                        app:layout_constraintTop_toTopOf="parent"
                                        tools:text="12" />

                                    <TextView
                                        style="@style/TextAppearance.ToDo.Status.Item.Title"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/allTasks"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintStart_toStartOf="parent" />

                                </androidx.constraintlayout.widget.ConstraintLayout>

                            </com.google.android.material.card.MaterialCardView>

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="@dimen/_80sdp"
                                android:layout_height="@dimen/_60sdp"
                                android:layout_marginVertical="@dimen/margin_micro"
                                android:layout_marginStart="@dimen/margin_micro"
                                app:cardBackgroundColor="@color/todo_color_surface"
                                app:cardCornerRadius="@dimen/_8sdp"
                                app:cardElevation="0dp"
                                app:strokeColor="@color/status_completed"
                                app:strokeWidth="@dimen/_1sdp">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_margin="@dimen/margin_micro">

                                    <ImageView
                                        android:id="@+id/imgvw_completed_status"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:contentDescription="@string/todo"
                                        android:paddingVertical="@dimen/_2sdp"
                                        android:scaleType="fitStart"
                                        android:src="@drawable/ic_status_completed"
                                        app:layout_constraintEnd_toStartOf="@+id/txt_completed_count"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent" />

                                    <TextView
                                        android:id="@+id/txt_completed_count"
                                        style="@style/TextAppearance.ToDo.Status.Item.Count"
                                        android:layout_width="0dp"
                                        android:layout_height="0dp"
                                        android:gravity="center"
                                        android:text="@{vm.doneTasksCount.toString()}"
                                        app:layout_constraintBottom_toBottomOf="@+id/imgvw_completed_status"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintStart_toEndOf="@+id/imgvw_completed_status"
                                        app:layout_constraintTop_toTopOf="parent"
                                        tools:text="12" />

                                    <TextView
                                        style="@style/TextAppearance.ToDo.Status.Item.Title"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/completed"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintStart_toStartOf="parent" />

                                </androidx.constraintlayout.widget.ConstraintLayout>

                            </com.google.android.material.card.MaterialCardView>

                        </LinearLayout>

                        <com.github.aachartmodel.aainfographics.aachartcreator.AAChartView
                            android:id="@+id/line_chart"
                            goneUnless="@{vm.allTasksCount==0}"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_200sdp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_normal"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TextAppearance.ToDo.Profile.Title"
                        onSafeClick="@{vm::onCategoryManagementClick}"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_micro"
                        android:layout_marginStart="0dp"
                        android:layout_weight="1"
                        android:paddingEnd="@dimen/margin_small"
                        android:text="@string/profile_title_categories" />

                    <ImageButton
                        onSafeClick="@{vm::onCategoryManagementClick}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:contentDescription="@string/todo"
                        android:padding="@dimen/padding_large"
                        android:src="@drawable/ic_more_categories"
                        android:tint="@color/adaptive" />

                </LinearLayout>

                <TextView
                    goneUnless="@{vm.allCategories.size()!=0}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_normal"
                    android:gravity="center"
                    android:text="@string/no_category_added" />

                <com.airbnb.epoxy.EpoxyRecyclerView
                    android:id="@+id/categories_recyclerview"
                    goneUnless="@{vm.allCategories.size()==0}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:overScrollMode="never"
                    android:paddingBottom="@dimen/padding_normal"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:spanCount="3"
                    tools:listitem="@layout/epoxy_item_profile_all_categories" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

</layout>