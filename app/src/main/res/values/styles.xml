<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppBottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="AppDialogTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="alertDialogStyle">@style/AppDialogStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_dialog</item>
    </style>

    <style name="AppDialogStyle" parent="Widget.AppCompat.ButtonBar.AlertDialog">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AppMaterialDatePickerTheme" parent="@style/ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">@color/picker_primary_color</item>
    </style>

    <style name="AppMaterialTimePickerTheme" parent="ThemeOverlay.MaterialComponents.TimePicker">
        <item name="colorPrimary">@color/picker_primary_color</item>
    </style>

    <style name="TextAppearance.Core.UpdateDialog.Title" parent="@style/TextAppearance.Core.Page.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_h3</item>
        <item name="android:textColor">@color/adaptive</item>
    </style>

    <style name="TextAppearance.Core.UpdateDialog.Description" parent="@style/TextAppearance.Core.Page.Title">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_size_micro</item>
    </style>

</resources>