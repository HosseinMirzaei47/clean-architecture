<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidArchitectureSamples" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/core_primary</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/core_primary</item>
        <item name="android:windowBackground">@color/light_gray</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/core_secondary</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/light_gray</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/core_font_regular</item>
        <item name="android:fontFamily">@font/core_font_regular</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="dialogTheme">@style/AppDialogTheme</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="materialCalendarTheme">@style/AppMaterialDatePickerTheme</item>
        <item name="materialTimePickerTheme">@style/AppMaterialTimePickerTheme</item>
    </style>
</resources>